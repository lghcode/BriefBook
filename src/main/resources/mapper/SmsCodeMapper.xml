<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lghcode.briefbook.mapper.SmsCodeMapper" >


    <select id="selectByUserIdAndType" resultType="com.lghcode.briefbook.model.SmsCode">
        select * from sms_code
        where type = #{type}
        and mobile in (select mobile from user where id = #{userId})
    </select>
</mapper>